<resources>

    <!-- Theme applied to the Android Window while the process is starting when the OS's Dark Mode setting is off -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Show a splash screen on the activity. Automatically removed when
             the Flutter engine draws its first frame -->
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <style name="ProtonTheme.Wallet" parent="ProtonTheme">
        <item name="brand_norm">@color/dreamy_blue</item>
        <!--<item name="brand_darken_10">@color/moody_blue</item>-->
        <item name="brand_darken_20">@color/victoria</item>
        <!--<item name="brand_darken_30">@color/meteorite</item>-->
        <item name="brand_darken_40">@color/meteorite</item> <!-- NONE -->
        <!--<item name="brand_lighten_10">@color/lavender_mist</item>-->
        <item name="brand_lighten_20">@color/whisper_lila</item>
        <!--<item name="brand_lighten_30">@color/titan_white</item>-->
        <item name="brand_lighten_40">@color/titan_white</item>

        <item name="proton_text_accent">?attr/brand_norm</item>
        <item name="proton_icon_accent">?attr/brand_norm</item>

        <item name="proton_interaction_norm">?attr/brand_norm</item>
        <item name="proton_interaction_norm_pressed">@color/moody_blue</item>
        <item name="proton_interaction_norm_disabled">@color/titan_white</item>

        <item name="materialButtonStyle">@style/ProtonButton.Rounded</item>
        <item name="materialButtonOutlinedStyle">@style/ProtonButton.OutlinedButton.Rounded</item>
        <item name="outlinedButtonStyle">@style/ProtonButton.OutlinedButton.Rounded</item>
    </style>

</resources>
